{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    },
    "esModuleInterop": true
  },
  "exclude": [
    "*.css",
    "*.scss"
  ]
}
